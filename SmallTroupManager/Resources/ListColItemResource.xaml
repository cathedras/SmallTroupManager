    <local:ListColTemp x:Key="FileResTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="FileResEdit" Text="{Binding FileRes}" Height="25"  Width="{Binding FileResWidth}"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="FileResTxt" Text="{Binding FileRes}" Height="25" Width="{Binding FileResWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
    </local:ListColTemp>
    <local:ListColTemp x:Key="ProgTypeTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="ProgTypeEdit" Text="{Binding ProgType}" Height="25"  Width="{Binding ProgTypeWidth}"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
