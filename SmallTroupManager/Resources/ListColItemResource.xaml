<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SmallTroupManager.Resources"
                    xmlns:model="clr-namespace:SmallTroupManager.Model">
    <local:ListColTemp x:Key="OrderTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="OrderShowEdit" Text="{Binding Order}" Height="25"  Width="{Binding OrderWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="OrderShowTxt" Text="{Binding Order}" Height="25" Width="{Binding OrderWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
    </local:ListColTemp>
    <local:ListColTemp x:Key="RepNameTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="RepNameEdit" Text="{Binding RepName}" Height="25"  Width="{Binding RepNameWidth}" Focusable="True" ForceCursor="True"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="RepNameTxt" Text="{Binding RepName}" Height="25" Width="{Binding RepNameWidth}"></TextBlock>
