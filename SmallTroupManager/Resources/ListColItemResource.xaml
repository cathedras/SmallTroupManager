            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="RepTypeTxt" Text="{Binding RepType}" Height="25" Width="{Binding RepTypeWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
    </local:ListColTemp>
    <local:ListColTemp x:Key="RepTimeTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="RepTimeEdit" Text="{Binding RepTime}" Height="25"  Width="{Binding RepTimeWidth}"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="RepTimeTxt" Text="{Binding RepTime}" Height="25" Width="{Binding RepTimeWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
    </local:ListColTemp>
    <local:ListColTemp x:Key="ActNameTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="ActNameEdit" Text="{Binding ActName}" Height="25"  Width="{Binding ActNameWidth}"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="ActNameTxt" Text="{Binding ActName}" Height="25" Width="{Binding ActNameWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
    </local:ListColTemp>
    <local:ListColTemp x:Key="RepBgmTemplate">
        <local:ListColTemp.EditTemplate>
            <DataTemplate  DataType="{x:Type model:RepertoireItem}">
                <TextBox x:Name="RepBgmEdit" Text="{Binding RepBgm}" Height="25"  Width="{Binding RepBgmWidth}"></TextBox>
            </DataTemplate>
        </local:ListColTemp.EditTemplate>
        <local:ListColTemp.ShowTemplate>
            <DataTemplate DataType="{x:Type model:RepertoireItem}">
                <TextBlock x:Name="RepBgmTxt" Text="{Binding RepBgm}" Height="25" Width="{Binding RepBgmWidth}"></TextBlock>
            </DataTemplate>
        </local:ListColTemp.ShowTemplate>
